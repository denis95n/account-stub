<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create-dict-status-id-seq" author="Denis">
        <createSequence sequenceName="status_id_seq" schemaName="dict"/>
    </changeSet>

    <changeSet id="create-dict-status-table" author="Denis">
        <createTable tableName="status" schemaName="dict">
            <column name="id" type="integer">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addDefaultValue schemaName="dict" tableName="status" columnName="id" defaultValueSequenceNext="status_id_seq"/>
    </changeSet>

    <changeSet id="create-bank-transaction-id-seq" author="Denis">
        <createSequence sequenceName="transaction_id_seq" schemaName="bank"/>
    </changeSet>

    <changeSet id="create-bank-transaction-table" author="Denis">
        <createTable tableName="transaction" schemaName="bank">
            <column name="id" type="integer">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="source_bank_book_id" type="integer">
                <constraints foreignKeyName="transaction_source_bank_book_fkey" references="bank.bank_book(id)"
                             nullable="false"/>
            </column>
            <column name="target_bank_book_id" type="integer">
                <constraints foreignKeyName="transaction_target_bank_book_fkey" references="bank.bank_book(id)"
                             nullable="false"/>
            </column>
            <column name="amount" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="initiation_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="completion_date" type="date"/>
            <column name="status" type="integer">
                <constraints foreignKeyName="transaction_status_fkey" references="dict.status(id)" nullable="false"/>
            </column>
        </createTable>
        <addDefaultValue schemaName="bank" tableName="transaction" columnName="id"
                         defaultValueSequenceNext="transaction_id_seq"/>
    </changeSet>
</databaseChangeLog>